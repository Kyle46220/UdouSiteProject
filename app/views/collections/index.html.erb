<div class="page-content">
  <div class="page-heading"> 
  <h1>Collections</h1>
  </div>
  <div class="page-body">


      
    
    
      <table>
        <thead>
          <tr>
            <th>Name</th>
            
          </tr>
        </thead>
        <tbody>
          
          <% @collections.each do |collection| %>
            <% if collection.public_display == true %>
            
            <tr>
              
              <td><%=collection.name %></td>
              
              <td><%= link_to "show collection", collection_cab_configs_path(collection_id: collection.id)%></td>
              <td><%= link_to "Destroy", collection_path(collection), method: :delete, data:{confirm: "reeeeaaaallllyyy???"} if current_user.profile.user_type == 'admin' && current_user.profile.id == collection.profile_id%></td>
              <td><%= link_to "Edit", edit_collection_path(collection) if current_user.profile.user_type == 'admin' && current_user.profile.id == collection.profile_id %></td>
            <%end%>
              
          <%end%>
        </tbody>
      </table>
      </div>
      </div>
    
