  <div>
    <%= form.label :height %>
    <%= form.number_field :height %>
  </div>
  <div>
    <%= form.label :width %>
    <%= form.number_field :depth %>
  </div>
  <div>
    <%= form.label :depth %>
    <%= form.number_field :depth %>
  </div>
  <div>
    <%= form.label :style %>
    <%= form.text_field :style %>
  </div>
  <div>
    <%= form.label :colour %>
    <%= form.text_field :colour %>
  </div>
  <div>
   
  
  <%= form.submit %>

<% end %>
