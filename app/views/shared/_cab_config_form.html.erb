<h1> this is the new cab config form </h1>

<%= form_with model:@cab_config do |form| %>
<div>
    <%= form.label :collection_id %>
    <%= form.select :collection_id, options_for_select(Collection.all.collect {|u| [u.name, u.id]}, :selected => Collection.first) %>
  </div>
  
  <div>
    <%= form.label :height %>
    <%= form.number_field :height %>
    <%= form.range_field(:height, in: 34..235) %>
  </div>
  <div>
    <%= form.label :width %>
    <%= form.number_field :depth %>
  </div>
  <div>
    <%= form.label :depth %>
    <%= form.number_field :depth %>
  </div>
  
 
   <div>
    <%form.label :colour%>
    <%= color_field(:colour, :colour) %>
    <%CabConfig.colours.keys.each do |col|%>
      <%=form.label col %>
      <%=form.radio_button :colour, col %>
     
    <%end%>
  </div>
  <div>
    <%= form.label :shelf_qty %>
    <%= form.number_field :shelf_qty %>
  </div>
  <div>
    <%= form.label :drawer_qty%>
    <%= form.number_field :drawer_qty %>
  </div>
  <div>
    <%= form.label :cupboard_qty %>
    <%= form.number_field :cupboard_qty %>
  </div>

  <div>
    <%= form.label :back_panel %>
    <%= form.text_field :back_panel %>
  </div>
  <div>
    <%form.label :style%>
    <%CabConfig.styles.keys.each do |style|%>
      <%=form.label style %>
      <%=form.radio_button :style, style %>
     
    <%end%>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>
   
  
  <%= form.submit %>

<% end %>
