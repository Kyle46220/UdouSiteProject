<div class ="form">

<%= form_with model:@profile local: true do |form| %>
<% if profile.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  
  <div>
    <%form.label :user_type%>
    <%Profile.user_types.keys.each do |user_type|%>
      <%=form.label user_type%>
      <%=form.radio_button :user_type, user_type%>
      <% if user_type == profile.user_type %>
        <%form.radio_button :user_type, :checked => true %>
      <%end%>
    <%end%>
  </div>
  <div>
    <p>would you like to sign up to our mailing list?<p>
    <%form.label :email_opt_in %>
    <%Profile.email_opt_ins.keys.each do |email_opt_in|%>
      <%=form.label email_opt_in%>
      <%=form.radio_button :email_opt_in, email_opt_in%>
      <% if email_opt_in == profile.email_opt_in %>
        <%form.radio_button :email_opt_in, :checked => true %>
      <%end%>
    <%end%>
  </div>
 

  <div >
  <%=form.label :picture%>
  <%=form.file_field :picture, accept: 'image/png, image/gif, image/jpeg, image/jpg'%>

  </div>

  <%= form.submit %>

<% end %>
</div>
